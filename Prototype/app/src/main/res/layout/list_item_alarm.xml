<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarmunit">

    <ImageView
        android:id="@+id/profileimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/basicprofile" />

    <TextView
        android:id="@+id/alarmname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        android:text="username"
        android:textSize="12dp"
        android:fontFamily="@font/suit_semibold_apply"
        android:textColor="@color/alarmblack"
        app:layout_constraintLeft_toRightOf="@+id/profileimg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alarmdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:text="userdescription"
        android:textColor="@color/textblack_C"
        android:textSize="15dp"
        android:fontFamily="@font/suit_regular_apply"
        app:layout_constraintBottom_toBottomOf="@+id/profileimg"
        app:layout_constraintLeft_toRightOf="@+id/profileimg"
        app:layout_constraintTop_toBottomOf="@+id/alarmname" />

    <TextView
        android:id="@+id/alarmtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="alarmarrivaltime"
        android:textColor="@color/textblack_C_pale"
        android:fontFamily="@font/suit_regular_apply"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/alarmdescription"
        app:layout_constraintLeft_toRightOf="@id/profileimg"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>